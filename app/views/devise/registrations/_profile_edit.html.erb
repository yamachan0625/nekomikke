<div id='edit-modal-wrapper'>
  <div class='edit-modal-close-btn'>
  <%= fa_icon "times-circle" %>
  </div>

  <div class='edit-modal'>

    
      <%= form_for current_user do |f| %>
        <div class="edit-actions">
          <div class='profile-back-button'>
            戻る
          </div>
          <div class='edit-modal__content'>
            <h2>編集</h2>
          </div> 
          <%= f.submit "保存", class: 'edit-btn' %>
        </div>
        <div class='profile-header'>
            <%= image_tag current_user.avatar.to_s, id: 'avatar-img-prev'%>
          <% if current_user.persisted? && current_user.avatar? %>
            <%= image_tag current_user.avatar.to_s, class: 'avatar-present-img' %>
            <label class='delete-btn'><%= f.check_box :remove_avatar %> 画像を削除</label>
          <% else %>
            <%= image_tag ("default.jpg"), class: 'avatar-present-img' %>
            <%= f.hidden_field :avatar_cache %>
          <% end %>
            <label>
            <%= fa_icon "camera" %>
              <%= f.file_field :avatar, id: 'profile-img' %>
            </label>
        </div>

        <div class="edit-field">
          <%= f.label :ニックネーム, class:'edit-name' %><br />
          <%= f.text_field :nickname, placeholder: 'ニックネーム(20文字以内)', class: 'nickname_edit' %>
        </div>

        <div class="edit-field">
          <%= f.label :住所, class:'edit-name' %><br />
          <%= f.select :address, User.addresses.keys %>
        </div>

        <div class="edit-field">
          <%= f.label :自己紹介, class:'edit-name' %><br />
          <%= f.text_area :introduction, placeholder: '自己紹介文を入力してください', :size=> "40x10" %>
        </div>
      <% end %>
  </div>
</div>