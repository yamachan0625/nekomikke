<div id='edit_modal_wrapper'>
  <div class='edit-modal-close-btn'>
    <%#<%= icon('fa',"times-circle") %>
  </div>

  <div class='edit_modal'>

    
      <%= form_for current_user do |f| %>
        <div class='edit_modal__content'>
          <h2>編集</h2>
        </div> 
        <div class='profile_header'>
            <%= image_tag current_user.avatar.to_s, id: 'avatar_img_prev'%>
          <% if current_user.persisted? && current_user.avatar? %>
            <%= image_tag current_user.avatar.to_s, class: 'avatar_present_img' %>
            <label class='delete_btn'><%= f.check_box :remove_avatar %> 画像を削除</label>
          <% else %>
            <%= image_tag 'default.jpg', class: 'avatar_present_img' %>
            <%= f.hidden_field :avatar_cache %>
          <% end %>
            <label>
            <%# <%= icon("fas","camera") %>
              <%= f.file_field :avatar, id: 'profile_img' %>
            </label>
        </div>

        <div class="edit_field">
          <%= f.label :ニックネーム, class:'edit_name' %><br />
          <%= f.text_field :nickname, placeholder: 'ニックネーム', class: 'nickname_edit' %>
        </div>

        <div class="edit_field">
          <%= f.label :住所, class:'edit_name' %><br />
          <%= f.select :address, User.addresses.keys %>
        </div>

        <div class="edit_field">
          <%= f.label :自己紹介, class:'edit_name' %><br />
          <%= f.text_area :introduction, placeholder: '自己紹介文を入力してください', :size=> "40x10" %>
        </div>
      
        <div class="edit_actions">
          <%= f.submit "保存", class: 'edit_btn' %>
        </div>
      <% end %>
  </div>
</div>