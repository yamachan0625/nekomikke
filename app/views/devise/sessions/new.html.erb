<div class='login-wrapper'>
<%= image_tag 'nekko2.svg',class: 'nekoimage2' %>
  <div class='login-wrapper__modal'>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'input_field' %>
        <span class='new-name', data-placeholder='メールアドレス'> </span>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password",class: 'input_field' %>
        <span class='new-name', data-placeholder='パスワード'> </span>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field_remember_btn">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン",class: 'new-btn'  %>
      </div>
    <% end %>
    <div class='btn-field'>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <li><%= link_to "新規会員登録", new_registration_path(resource_name) %><br /></li>
      <% end %>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <li><%= link_to "パスワードをお忘れですか？", new_password_path(resource_name) %><br /></li>
      <% end %>
  </div>
</div>
<script>
  $('.input_field').on("focus",function(){
    $(this).addClass('focus');
  });
  $('.input_field').on("blur",function(){
    if($(this).val() == "")
    $(this).removeClass('focus');
  });
</script>
