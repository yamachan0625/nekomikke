<header id="luxbar" class="luxbar-fixed">
    <input type="checkbox" class="luxbar-checkbox" id="luxbar-checkbox"/>
    <div class="luxbar-menu luxbar-menu-right luxbar-menu-material-cyan">
        <ul class="luxbar-navigation">
            <li class="luxbar-header">
                <a href="/posts" class="luxbar-brand">
                  <%= image_tag ("neko_logo.png"), class: :header_logo_image%>
                </a>
                <label class="luxbar-hamburger luxbar-hamburger-doublespin" 
                id="luxbar-hamburger" for="luxbar-checkbox"> <span></span> </label>
            </li>

            <div class='search-field'>
              <%= form_tag search_posts_path,:method => 'get' do %>
                <%= text_field_tag :search,'', placeholder: "住所で検索" %>
                <label>
                  <%= submit_tag 'Search', :name => nil , class: "search-field__submit" %> 
                    <%= fa_icon "search" %>
                </label>
              <% end %>
            </div>

            <% if user_signed_in? %>
              <li class="sp-menu"><a href="/users/<%= current_user.id%>"><%= fa_icon "user" %>マイページ</a></li>
              <li class="sp-menu"><a href="/users/edit"><%= fa_icon "cog" %>アカウント設定</a></li>
              <li class="sp-menu"><a rel="nofollow" data-method="delete" href="/users/sign_out"><%= fa_icon "sign-out" %>ログアウト</a></li>
              <li class="pc-menu dropdown">
              <a href="/users/<%= current_user.id%>">
                <div class='my_page_btn_field '>
                  <%= image_tag current_user.avatar.to_s %>
                </div>
              </a>
                <ul>
                    <li class="pc-menu" ><a href="/users/<%= current_user.id%>"><%= fa_icon "user" %>マイページ</a></li>
                    <li class="pc-menu" ><a href="/users/edit"><%= fa_icon "cog" %>アカウント設定</a></li>
                    <li class="pc-menu" ><a rel="nofollow" data-method="delete" href="/users/sign_out"><%= fa_icon "sign-out" %>ログアウト</a></li>
                </ul>
            </li>
            <%else%>
              <div class='sign_up_field'>
                <%= link_to "ログイン", user_session_path, class: :header_btn %>
              </div>
              <div class='sign_in_field'>
                <%= link_to "新規登録", new_user_registration_path, class: :header_btn %> 
              </div>
            <%end%>
        </ul>
    </div>
</header>